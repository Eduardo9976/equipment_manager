<%= stylesheet_link_tag "manufacturer" %>
<h1>Fabricantes</h1>

<%if @manufacturers.empty?%>
  <h3>Nenhum fabricante cadastrado</h3>
<%end%>
  <%@manufacturers.each do |manufacturer|%>
    <h3><%=link_to manufacturer.name, manufacturer_path(manufacturer)%></h3>
  <%end%>
<%= link_to "Voltar", root_path %>
<%=link_to "Novo Fabricante", new_manufacturer_path%>
