<h1> Produtos </h1>
<%if @products.empty? %>
   <h3>Nenhum produto cadastrado </h3>
<% end %>

<%@products.each do |product| %>
  <dl>
    <dt> Fabricante: </dt>
    <dd> <%= product.manufacturer.name  %> </dd>
    <dt> Produto: </dt>
    <dd> <%= link_to product.name, product_path(product) %> </dd>
  </dl>
<% end %>

<%= link_to  "Voltar", root_path %>
<%= link_to  "Novo Produto", new_product_path %>